      </Component>
      <Component Id="spells.txt" Guid="2FC00676-7C5D-4075-9BC7-2C49C977732B">
        <File Id="spells.txt" Name="spells.txt" Source="$(var.EQLogParser_TargetDir)\data\spells.txt" />
      </Component>      
