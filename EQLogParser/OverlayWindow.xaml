<Window x:Class="EQLogParser.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="198" Width="500"
        MinWidth="375"
        Topmost="True"
        Title="Configure Overlay Window"
        Style="{StaticResource OverlayStyle}" Closing="WindowClosing" TextOptions.TextFormattingMode="Display" ShowInTaskbar="False">
  <Window.Background>
    <SolidColorBrush x:Name="windowBrush" Opacity="0.0" Color="Black" />
  </Window.Background>
  <Canvas x:Name="overlayCanvas" SizeChanged="PanelSizeChanged">
    <StackPanel x:Name="configPanel" Orientation="Horizontal">
      <TextBlock x:Name="fontSizeLabel" VerticalAlignment="Center" FontSize="12" Foreground="White">Font Size:</TextBlock>
      <ComboBox x:Name="fontSizeSelection" SelectedIndex="3" FontSize="12" MaxHeight="25" Margin="5,0,0,0" SelectionChanged="FontSizeSelectionChanged" Background="#FF040000">
        <ComboBoxItem>10</ComboBoxItem>
        <ComboBoxItem>11</ComboBoxItem>
        <ComboBoxItem>12</ComboBoxItem>
        <ComboBoxItem>13</ComboBoxItem>
        <ComboBoxItem>14</ComboBoxItem>
        <ComboBoxItem>15</ComboBoxItem>
        <ComboBoxItem>16</ComboBoxItem>
        <ComboBoxItem>17</ComboBoxItem>
        <ComboBoxItem>18</ComboBoxItem>
      </ComboBox>
      <TextBlock x:Name="damageModeLabel" VerticalAlignment="Center" FontSize="12" Margin="10,0,0,0" Foreground="White" ToolTip="Choose NPC Death for the Overlay to reset damage and dps after all NPCs are dead. Choose Timeout for it to reset damage and dps after the 24 second timeout period is reached.">Restart Damage After:</TextBlock>
      <ComboBox x:Name="damageModeSelection" SelectedIndex="0" FontSize="12" MaxHeight="25" Margin="5,0,0,0" Background="#FF040000">
        <ComboBoxItem Tag="0">NPC Death</ComboBoxItem>
        <ComboBoxItem Tag="20">20 Seconds</ComboBoxItem>
        <ComboBoxItem Tag="30">30 Seconds</ComboBoxItem>
        <ComboBoxItem Tag="40">40 Seconds</ComboBoxItem>
        <ComboBoxItem Tag="50">50 Seconds</ComboBoxItem>
        <ComboBoxItem Tag="60">60 Seconds</ComboBoxItem>
      </ComboBox>
    </StackPanel>
    <StackPanel x:Name="savePanel" Orientation="Horizontal">
      <Button x:Name="saveButton" Margin="3,0,0,0" Width="58" MaxHeight="25" FontSize="12" Click="SaveClick">Save</Button>
    </StackPanel>
  </Canvas>
</Window>
